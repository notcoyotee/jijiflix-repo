<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.jijiflix" name="JijiFlix Repository" version="1.0.0" provider-name="jiji">
    <extension point="xbmc.addon.repository">
        <dir>
            <info>https://raw.githubusercontent.com/notcoyotee/jijiflix-repo/main/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/notcoyotee/jijiflix-repo/main/addons.xml.md5</checksum>
            <datadir>https://raw.githubusercontent.com/notcoyotee/jijiflix-repo/main/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Repository for JijiFlix Addon</summary>
        <platform>all</platform>
    </extension>
</addon><addon id="plugin.video.jijiflix" name="JijiFlix" version="1.0.0" provider-name="jiji">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.six" />
        <import addon="script.module.kodi-six" />
        <import addon="script.module.beautifulsoup4" version="4.0.0" />
        <import addon="script.module.html5lib" />
        <import addon="script.module.resolveurl" version="5.1.0" />
        <import addon="plugin.video.youtube" optional="true" />
        <import addon="plugin.video.imdb.trailers" optional="true" />
        <import addon="script.module.requests" version="2.31.0" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>    
    <extension point="xbmc.addon.metadata">
        <summary>Conquer the World with Love, everybodyyyy</summary>
        <description>Conquer the World with Love, everybodyyyy... -Le Boche </description>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
    
</addon></addons>